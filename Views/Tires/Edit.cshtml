@model VehicleTracker.Models.Tire

@{
    ViewData["Title"] = "Edit Tire Condition";
}

<h2>Edit</h2>

<h4>Tire</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="VehicleID" />
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TireCondition" class="control-label"></label>
                <select asp-for="TireCondition" class="form-control" asp-items="Html.GetEnumSelectList<Tire.Condition>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="TireCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Tires" asp-action="Index" asp-route-id="@Model.ID">Edit Tires</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
